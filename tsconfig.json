{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "moduleDetection": "force",
    "allowImportingTsExtensions": true,
    "strict": false,
    "noEmit": true,
    "skipLibCheck": true,
    "types": ["./types/cloudflare", "./types/node-stubs"]
  },
  "include": ["types/**/*.d.ts", "src/**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules"]
}
