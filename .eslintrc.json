{
  "env": { "browser": true, "es2021": true },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "parserOptions": { "ecmaVersion": "latest", "sourceType": "module" },
  "rules": {
    "quotes": ["error", "backtick"],
    "no-var": "error",
    "prefer-const": "error",
    "semi": ["error", "always"]
  }
}
