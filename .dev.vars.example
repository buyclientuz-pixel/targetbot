# Copy this file to `.dev.vars` for `wrangler dev` and fill in the values below.
# Do NOT commit files with real secrets to git.

# Telegram configuration
DEFAULT_TZ="Asia/Tashkent"
ADMIN_IDS="7623982602,573424022"
BOT_TOKEN="0000000000:REPLACE_WITH_TELEGRAM_BOT_TOKEN"
TELEGRAM_BOT_TOKEN="${BOT_TOKEN}"
TELEGRAM_SECRET="replace-with-telegram-secret"

# Cloudflare worker information
WORKER_URL="example.workers.dev"
CLOUDFLARE_API_TOKEN="replace-with-cloudflare-api-token"
CLOUDFLARE_AC_ID="replace-with-cloudflare-account-id"

# Facebook / Meta OAuth
FB_APP_ID="replace-with-meta-app-id"
FB_APP_SECRET="replace-with-meta-app-secret"
FB_LONG_TOKEN="replace-with-meta-long-lived-token"

# Optional admin auth data
ADMIN_ID="replace-with-admin-id"
ADMIN_KEY="replace-with-admin-key"

# R2 storage configuration
R2_ACCESS_KEY_ID="replace-with-r2-access-key-id"
R2_SECRET_ACCESS_KEY="replace-with-r2-secret-access-key"
R2_BUCKET_NAME="botbucket"
R2_ACCOUNT_ID="replace-with-r2-account-id"
R2_ENDPOINT="https://<account-id>.r2.cloudflarestorage.com"
